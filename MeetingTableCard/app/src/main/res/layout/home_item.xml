<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_home_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/px59">

    <LinearLayout
        android:layout_width="@dimen/px420"
        android:layout_height="@dimen/px420"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/home_item_bg">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="@dimen/dp60"
            android:layout_height="@dimen/dp51"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/agenda" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/px46"
            android:text="@string/meeting_login_button"
            android:textColor="@color/white"
            android:textSize="@dimen/tosmalltextsize2"
            tools:text="会议议程" />

    </LinearLayout>
</LinearLayout>
