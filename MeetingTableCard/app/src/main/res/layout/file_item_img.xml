<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="@dimen/space_10dp"
            android:layout_height="@dimen/space_10dp"
            android:background="@drawable/circle_empty_bg"
            android:text="" />

        <View
            android:layout_width="@dimen/dp1"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/marginsize"
            android:background="@drawable/line_grey_vertical_bg" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/marginsize"
            android:text="@string/agenda"
            android:textColor="@color/c_606266"
            android:textSize="@dimen/textSp8"
            tools:text="2020-3-24 11:30:50 上传" />

        <com.zkml.meetingtablecard.view.CustomGridView
            android:id="@+id/gridView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginsize"
            android:horizontalSpacing="0dp"
            android:numColumns="3"
            android:verticalSpacing="@dimen/marginsize" />
    </LinearLayout>
</LinearLayout>
