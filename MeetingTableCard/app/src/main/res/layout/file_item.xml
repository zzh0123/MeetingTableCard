<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_home_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal"
    android:layout_marginTop="@dimen/px46">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="@dimen/space_10dp"
            android:layout_height="@dimen/space_10dp"
            android:background="@drawable/circle_empty_bg"
            android:text="" />

        <View
            android:layout_width="@dimen/dp1"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/marginsize"
            android:background="@drawable/line_grey_vertical_bg" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="@dimen/px300"
        android:layout_height="@dimen/px360"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/file_item_bg">

        <ImageView
            android:layout_width="@dimen/dp60"
            android:layout_height="@dimen/dp51"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/file" />

        <TextView
            android:id="@+id/tv_file_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp10_5"
            android:textColor="@color/c_606266"
            android:textSize="@dimen/textSp8"
            tools:text="“不忘初心，牢记使命” 学习资料" />

    </LinearLayout>

        <TextView
            android:id="@+id/tv_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/px34"
            android:textColor="@color/white"
            android:textSize="@dimen/textSp7"
           android:text="@string/download"
            android:background="@drawable/bt_download_bg"
            android:paddingLeft="@dimen/px15"
            android:paddingRight="@dimen/px15"
            android:paddingTop="@dimen/dp1_5"
            android:paddingBottom="@dimen/dp1_5"/>
    </LinearLayout>
</LinearLayout>
