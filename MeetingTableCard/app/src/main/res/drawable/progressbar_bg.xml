<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 设置背景色（黑色） -->

    <item android:id="@android:id/background">

        <shape>

            <corners android:radius="12dp"></corners>
            <solid android:color="@color/small_screen_item_line"></solid>

        </shape>

    </item>

    <!-- 设置进度条颜色（白色） -->

    <item android:id="@android:id/progress">

        <clip>
            <shape>

                <gradient
                    android:angle="45"
                    android:endColor="@color/color_login_bt"
                    android:startColor="@color/color_login_bt"></gradient>
                <corners android:radius="12dp"></corners>

            </shape>

        </clip>

    </item>

</layer-list>
